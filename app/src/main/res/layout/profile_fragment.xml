<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragment.Profile_fragment">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:fitsSystemWindows="false"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="50dp"
                app:expandedTitleMarginStart="50dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="parallax"
                    android:elevation="7dp">


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_layout"
            android:background="@color/background_color">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/_260sdp"
                        android:id="@+id/relative_child">

            <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/adduser"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>
            <RelativeLayout
                    android:id="@+id/relative_imageback"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/add"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/user_image_background"
                    android:layout_height="@dimen/_120sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userimage"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/image_1"/>

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/rl_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/relative_imageback"
                    android:layout_marginTop="@dimen/_12sdp">

                <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jhon Deo"
                        android:textColor="@color/contenttextcolor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerHorizontal="true"/>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/username">

                    <TextView
                            android:id="@+id/textage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23 Year"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_10sdp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_toRightOf="@id/textage"/>

                    <View android:layout_width="@dimen/_1sdp" android:layout_height="@dimen/_10sdp"
                          android:layout_toRightOf="@id/textage"
                          android:background="#959898"
                          android:layout_marginLeft="@dimen/_7sdp"
                          android:layout_marginTop="@dimen/_3sdp">

                    </View>


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/linear_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/rl_username"
                    android:weightSum="3">

                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                    <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_alignParentRight="true"
                            android:background="#46959898"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp">

                    </View>

                    <TextView
                            android:id="@+id/following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.5k"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_below="@id/following"/>

                </RelativeLayout>

                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                    <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_alignParentRight="true"
                            android:background="#46959898"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"/>

                    <TextView
                            android:id="@+id/follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5k"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follower"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_below="@id/follow"/>

                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                    <TextView
                            android:id="@+id/follower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2k"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/contenttextcolor"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_below="@id/follower"/>

                </RelativeLayout>

            </LinearLayout>

            <View android:id="@+id/divider" android:layout_width="match_parent"
                  android:layout_height="@dimen/_1sdp"
                  android:layout_below="@id/linear_userinfo"
                  android:background="#2FD1CECE">

            </View>

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/rlative_posted_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_below="@id/relative_child">


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Posted video"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/contenttextcolor"
                      android:layout_marginLeft="@dimen/_15sdp"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rlative_posted_video">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_content1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="bottom">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>