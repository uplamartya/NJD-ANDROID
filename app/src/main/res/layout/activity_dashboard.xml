<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".Activities.DashboardActivity">

    <FrameLayout
            android:id="@+id/my_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linear">

    </FrameLayout>

    <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/bottom_navigation_color"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="5">

        <RelativeLayout
                android:id="@+id/relative_home"
                android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

            <ImageView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/home_icon"/>

            <View
                    android:id="@+id/view_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#E62929"/>

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/relative_search"
                android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
            <ImageView
                    android:id="@+id/search"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/icon_search"
                    android:contentDescription="TODO"/>

            <View
                    android:id="@+id/view_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#E62929"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_camera"
                android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
            <ImageView
                    android:id="@+id/camera"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:src="@drawable/camera"/>

            <View
                    android:id="@+id/view_camera"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#E62929"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_notification"
                android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
            <ImageView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:src="@drawable/notification"/>

            <View
                    android:id="@+id/view_notification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#E62929"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_user"
                android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
            <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:src="@drawable/usericon"/>

            <View
                    android:id="@+id/view_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#E62929"/>

        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
            android:id="@+id/videoDesc_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>