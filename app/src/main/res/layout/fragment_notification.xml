<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                tools:context=".Fragment.NotificationFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:id="@+id/recycler_child" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/contenttextcolor"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"/>

        <View android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
              android:background="#32BBB7B7"
              android:layout_below="@+id/notification"></View>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_notification"
            android:layout_below="@id/recycler_child"></android.support.v7.widget.RecyclerView>


</RelativeLayout>